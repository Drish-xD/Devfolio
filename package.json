{
  "name": "devfolio",
  "description": "Hi! my name is Drish, a Front-End Developer.",
  "version": "2.1.0",
  "author": {
    "name": "Drish",
    "email": "hey@drishxd.dev",
    "url": "https://drishxd.dev"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --fix",
      "pnpm format"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier",
      "next/core-web-vitals"
    ],
    "rules": {
      "no-undef": "off",
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 100,
    "importOrder": [
      "^(react/(.*)$)|^(react$)|^(next/(.*)$)|^(next$)",
      "<THIRD_PARTY_MODULES>",
      "^@/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "next": "^14.0.4",
    "gsap": "^3.12.4",
    "@studio-freight/react-lenis": "^0.0.40",
    "contentful": "^10.6.16",
    "next-mdx-remote": "^4.4.1",
    "react-transition-group": "^4.4.5",
    "split-type": "^0.3.4",
    "sass": "^1.69.7",
    "typescript": "5.3.3",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^14.0.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/mdx": "^2.0.10",
    "@types/node": "20.10.6",
    "@types/react": "18.2.47",
    "@types/react-dom": "18.2.18",
    "@types/react-transition-group": "^4.4.10",
    "cross-env": "^7.0.3",
    "encoding": "^0.1.13",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  }
}
